<Window x:Class="WordRepeat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordRepeat"
        xmlns:services="clr-namespace:WordRepeat.Services"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="WordRepeat" 
        Height="550" 
        Width="950"
        MinHeight="400" 
        MinWidth="700">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#FF1A1A1A"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="10,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF2A2A2A"/>
                                <Setter Property="BorderBrush" Value="#FF555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#FF292727">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Column="1">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FF1A1A1A"/>
            </Rectangle.Fill>
        </Rectangle>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="WORDREPEAT" 
                   Grid.Row="0"
                   FontSize="20" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   FontFamily="Arial"
                   Margin="10,10,10,0"/>

            <Label Content="НАВИГАЦИЯ" 
                   Grid.Row="1"
                   Foreground="#FF666677"
                   Margin="10,20,10,5"/>
            
            <StackPanel Grid.Row="2" 
                        Margin="10,0,10,10"
                        VerticalAlignment="Top">
                <Button x:Name="MainButton" 
                        Content="🏠 Главная" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="MainButtonClick"/>

                <Button x:Name="WordButton" 
                        Content="📚 Словарь" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="WordButtonClick"/>

                <Button x:Name="TrainButton" 
                        Content="🔄 Повторение" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="TrainButtonClick"/>

                <Button x:Name="HistoryButton" 
                        Content="📅 История" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="HistoryButtonClick"/>

                <Button x:Name="SettingButton" 
                        Content="⚙️ Настройки" 
                        Style="{StaticResource NavButtonStyle}"
                        Click="SettingButtonClick"/>
            </StackPanel>

            <Border Grid.Row="3" 
                    Background="#FF1A1A1A"
                    Margin="10"
                    Padding="10"
                    CornerRadius="5">
                <TextBlock Text="developer sergxlove, 2026" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Foreground="#FF888888"
                           FontSize="11"/>
            </Border>
        </Grid>

        <Border Grid.Column="1" 
                Margin="10" 
                BorderBrush="#FF1C1C1C" 
                BorderThickness="1"
                Background="Transparent">
            <ContentControl x:Name="MainContentControl"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                <Grid>
                    <TextBlock Text="Выберите раздел в навигации" 
                               Foreground="#FF666677"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </ContentControl>
        </Border>

        <Grid Grid.Column="1"
              x:Name="NotificationContainer"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Margin="20"
              Width="420"
              IsHitTestVisible="True"
              Panel.ZIndex="1000">
        </Grid>

    </Grid>
</Window>
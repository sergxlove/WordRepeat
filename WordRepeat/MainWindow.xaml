<Window x:Class="WordRepeat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compliance/2006"
        xmlns:local="clr-namespace:WordRepeat"
        Title="WordRepeat" Height="550" Width="950"
        MinHeight="400" MinWidth="700">

    <Grid Background="#FF292727">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="1">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF1A1A1A" Offset="0"/>
                    <GradientStop Color="#FF1A1A1A" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Content="WORDREPEAT" 
                   Grid.Row="0"
                   FontSize="20" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   FontFamily="Arial"
                   Margin="10,10,10,0"/>
            <Label Content="НАВИГАЦИЯ" 
                   Grid.Row="1"
                   Foreground="#FF666677"
                   Margin="10,20,10,5"/>
            <StackPanel Grid.Row="2" 
                        Margin="10,0,10,10"
                        VerticalAlignment="Top">
                <Button x:Name="MainButton" Content="Главная" 
                        Height="45"
                        Background="#FF1A1A1A" 
                        BorderBrush="#FF444444" 
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        Click="MainButtonClick"
                        Margin="0,0,0,10"/>

                <Button x:Name="WordButton" Content="Словарь" 
                        Height="45"
                        Background="#FF1A1A1A" 
                        BorderBrush="#FF444444" 
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        Click="WordButtonClick"
                        Margin="0,0,0,10"/>

                <Button x:Name="TrainButton" Content="Повторение" 
                        Height="45"
                        Background="#FF1A1A1A" 
                        BorderBrush="#FF444444" 
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        Click="TrainButtonClick"
                        Margin="0,0,0,10"/>

                <Button x:Name="HistoryButton" Content="История" 
                        Height="45"
                        Background="#FF1A1A1A" 
                        BorderBrush="#FF444444" 
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        Click="HistoryButtonClick"
                        Margin="0,0,0,10"/>

                <Button x:Name="SettingButton" Content="Настройки" 
                        Height="45"
                        Background="#FF1A1A1A" 
                        BorderBrush="#FF444444" 
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        Click="SettingButtonClick"
                        Margin="0,0,0,10"/>
            </StackPanel>

            <Border Grid.Row="3" 
                    Background="#FF1A1A1A"
                    Margin="10"
                    Padding="10"
                    CornerRadius="5">
                <TextBlock Text="developer sergxlove, 2026" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Foreground="#FF888888"
                           FontSize="11"/>
            </Border>
        </Grid>

        <Border Grid.Column="1" 
                Margin="10" 
                BorderBrush="#FF1C1C1C" 
                BorderThickness="1"
                Background="Transparent">
            <ContentControl x:Name="MainContentControl"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch">
                <Grid>
                    <TextBlock Text="Выберите раздел" 
                               Foreground="#FF666677"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </ContentControl>
        </Border>
    </Grid>
</Window>
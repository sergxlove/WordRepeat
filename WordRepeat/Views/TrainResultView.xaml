<UserControl x:Class="WordRepeat.Views.TrainResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordRepeat.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="Transparent" Margin="0,0,-58,-71">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Margin="10,10,10,0"
                Background="#FF1E1E1E" 
                CornerRadius="8"
                BorderBrush="#FF444444"
                BorderThickness="1">

            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🏆" 
                               Foreground="White" 
                               FontSize="20" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="РЕЗУЛЬТАТ ТРЕНИРОВКИ" 
                                   Foreground="#FFAAAAAA" 
                                   FontSize="11"/>
                        <TextBlock Text="Тренировка завершена" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="Дата" 
                                   Foreground="#FFAAAAAA" 
                                   FontSize="11"/>
                        <TextBlock x:Name="DateText" 
                                   Text="10.01.24 15:30" 
                                   Foreground="#FFAAAAAA" 
                                   FontSize="13"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Border Grid.Row="1" 
                Margin="10,20,10,20"
                Background="#FF1A1A1A" 
                CornerRadius="12"
                BorderBrush="#FF333333"
                BorderThickness="1">

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Иконка и заголовок -->
                <StackPanel Grid.Row="0" 
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                    <TextBlock x:Name="ResultIcon" 
                               Text="🏆" 
                               FontSize="60"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="ResultTitleText"
                               Text="ОТЛИЧНЫЙ РЕЗУЛЬТАТ!"
                               Foreground="#FF4CAF50"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Сообщение -->
                <TextBlock Grid.Row="1"
                           x:Name="ResultMessageText"
                           Text="Вы отлично справились! Продолжайте в том же духе!"
                           Foreground="#FFAAAAAA"
                           FontSize="16"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Основная статистика - только счет -->
                <Border Grid.Row="2" 
                        Background="#FF2A2A2A" 
                        CornerRadius="8" 
                        Padding="40,30"
                        Margin="0,0,0,40"
                        HorizontalAlignment="Center"
                        Width="400">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ВАШ СЧЕТ" 
                                   Foreground="#FFAAAAAA" 
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"
                                   HorizontalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,10">
                            <TextBlock x:Name="CorrectAnswersText" 
                                       Text="18" 
                                       Foreground="#FF4CAF50" 
                                       FontSize="48"
                                       FontWeight="Bold"/>
                            <TextBlock Text="/" 
                                       Foreground="#FFAAAAAA" 
                                       FontSize="48"
                                       FontWeight="Bold"
                                       Margin="15,0,15,0"/>
                            <TextBlock x:Name="TotalQuestionsText" 
                                       Text="20" 
                                       Foreground="White" 
                                       FontSize="48"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <TextBlock x:Name="PercentageText" 
                                   Text="90%" 
                                   Foreground="#FF4CAF50" 
                                   FontSize="28"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Детальная статистика -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка -->
                    <StackPanel Grid.Column="0" 
                                Margin="0,0,15,0">
                        <!-- Время -->
                        <Border Background="#FF2A2A2A" 
                                CornerRadius="6" 
                                Padding="15"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="⏱️" 
                                           FontSize="18"
                                           Margin="0,0,15,0"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="ВРЕМЯ" 
                                               Foreground="#FFAAAAAA" 
                                               FontSize="11"/>
                                    <TextBlock x:Name="TimeText" 
                                               Text="02:45" 
                                               Foreground="White" 
                                               FontSize="16"
                                               FontWeight="Bold"/>
                                    <TextBlock x:Name="TimePerQuestionText"
                                               Text="8.2 сек/вопрос"
                                               Foreground="#FF888888"
                                               FontSize="11"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Правильные ответы -->
                        <Border Background="#FF2A2A2A" 
                                CornerRadius="6" 
                                Padding="15"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="✅" 
                                           FontSize="18"
                                           Margin="0,0,15,0"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="ПРАВИЛЬНЫЕ ОТВЕТЫ" 
                                               Foreground="#FFAAAAAA" 
                                               FontSize="11"/>
                                    <TextBlock x:Name="CorrectCountText" 
                                               Text="18" 
                                               Foreground="#FF4CAF50" 
                                               FontSize="16"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Разделитель -->
                    <Rectangle Grid.Column="1"
                               Width="1"
                               Fill="#FF333333"
                               Margin="15,0"
                               VerticalAlignment="Stretch"/>

                    <!-- Правая колонка -->
                    <StackPanel Grid.Column="2" 
                                Margin="15,0,0,0">
                        <!-- Ошибки -->
                        <Border Background="#FF2A2A2A" 
                                CornerRadius="6" 
                                Padding="15"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="❌" 
                                           FontSize="18"
                                           Margin="0,0,15,0"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="ОШИБКИ" 
                                               Foreground="#FFAAAAAA" 
                                               FontSize="11"/>
                                    <TextBlock x:Name="WrongCountText" 
                                               Text="2" 
                                               Foreground="#FFD32F2F" 
                                               FontSize="16"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Лучшая серия -->
                        <Border Background="#FF2A2A2A" 
                                CornerRadius="6" 
                                Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="🔥" 
                                           FontSize="18"
                                           Margin="0,0,15,0"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="ЛУЧШАЯ СЕРИЯ" 
                                               Foreground="#FFAAAAAA" 
                                               FontSize="11"/>
                                    <TextBlock x:Name="BestStreakText" 
                                               Text="10 правильных подряд" 
                                               Foreground="#FFFF9800" 
                                               FontSize="16"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Margin="10,0,10,10"
                Background="#FF1E1E1E" 
                CornerRadius="8"
                BorderBrush="#FF444444"
                BorderThickness="1">

            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая кнопка -->
                <Button Grid.Column="0"
                        x:Name="RestartButton"
                        Content="🔄 Начать заново"
                        Width="160"
                        Height="40"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        HorizontalAlignment="Left"
                        Click="RestartButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF66BB6A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Центральная кнопка -->
                <Button Grid.Column="1"
                        x:Name="CloseButton"
                        Content="✓ Завершить"
                        Width="140"
                        Height="40"
                        Background="#FF2196F3"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF42A5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Правая кнопка -->
                <Button Grid.Column="2"
                        x:Name="NewTrainingButton"
                        Content="🎯 Новая тренировка"
                        Width="160"
                        Height="40"
                        Background="#FF9C27B0"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        HorizontalAlignment="Right"
                        Click="NewTrainingButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFAB47BC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
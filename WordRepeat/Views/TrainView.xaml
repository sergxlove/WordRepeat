<UserControl x:Class="WordRepeat.Views.TrainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordRepeat.Views"
             mc:Ignorable="d" 
             d:DesignHeight="528" d:DesignWidth="703"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Тренировка слов" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold"/>
            <TextBlock Text="Настройте параметры тренировки и начните повторение слов" 
                       Foreground="#FFAAAAAA" 
                       FontSize="13"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Margin="10,10,10,10" 
                Background="#FF1E1E1E" 
                CornerRadius="8"
                BorderBrush="#FF444444"
                BorderThickness="1">

            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="⚙️" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Настройки тренировки" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Border Background="#FF2A2A2A" 
                                CornerRadius="6" 
                                Padding="12"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="🎯" 
                                               Foreground="White" 
                                               FontSize="14" 
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Режим" 
                                               Foreground="White" 
                                               FontSize="14"
                                               FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Margin="5,0,0,0">
                                    <RadioButton x:Name="ModeWordRadio" 
                                                 GroupName="TrainingMode"
                                                 Content="Слово → Перевод"
                                                 IsChecked="True"
                                                 Foreground="White"
                                                 FontSize="13"
                                                 Margin="0,0,0,8"/>

                                    <RadioButton x:Name="ModeTranslationRadio" 
                                                 GroupName="TrainingMode"
                                                 Content="Перевод → Слово"
                                                 Foreground="White"
                                                 FontSize="13"
                                                 Margin="0,0,0,8"/>

                                    <RadioButton x:Name="ModeMixedRadio" 
                                                 GroupName="TrainingMode"
                                                 Content="Смешанный"
                                                 Foreground="White"
                                                 FontSize="13"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="#FF2A2A2A" 
                                CornerRadius="6" 
                                Padding="12">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="🔢"
                                               FontSize="14" 
                                               Foreground="White" 
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Количество слов" 
                                               Foreground="White" 
                                               FontSize="14"
                                               FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Margin="5,0,0,0">
                                    <Slider x:Name="WordsCountSlider" 
                                            Minimum="5" 
                                            Maximum="50" 
                                            Value="20"
                                            Height="25"
                                            Margin="0,0,0,12"
                                            ValueChanged="WordsCountSlider_ValueChanged"/>

                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center"
                                                Margin="0,5,0,0">
                                        <TextBlock x:Name="SelectedCountText" 
                                                   Text="20" 
                                                   Foreground="#FF4CAF50" 
                                                   FontSize="16"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text=" слов" 
                                                   Foreground="#FFAAAAAA" 
                                                   FontSize="13"
                                                   Margin="2,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <Border Background="#FF2A2A2A" 
                                CornerRadius="6" 
                                Padding="12"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="❓" 
                                               Foreground="White" 
                                               FontSize="14"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Тип вопросов" 
                                               Foreground="White" 
                                               FontSize="14"
                                               FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Margin="5,0,0,0">
                                    <RadioButton x:Name="TypeInputRadio" 
                                                 GroupName="QuestionType"
                                                 Content="Ввод ответа"
                                                 IsChecked="True"
                                                 Foreground="White"
                                                 FontSize="13"
                                                 Margin="0,0,0,8"/>

                                    <RadioButton x:Name="TypeOptionsRadio" 
                                                 GroupName="QuestionType"
                                                 Content="Выбор из вариантов"
                                                 Foreground="White"
                                                 FontSize="13"/>
                                </StackPanel>

                                <StackPanel x:Name="OptionsSettingsPanel" 
                                            Margin="8,12,0,0"  
                                            Visibility="Collapsed">
                                    <TextBlock Text="Вариантов:" 
                                               Foreground="#FFAAAAAA" 
                                               FontSize="12"
                                               Margin="0,0,0,6"/>
                                    <ComboBox x:Name="OptionsCountComboBox"
                                              Height="28" 
                                              Background="#FF333333"
                                              Foreground="White"
                                              BorderBrush="#FF555555"
                                              Padding="8,0"
                                              FontSize="12"
                                              VerticalContentAlignment="Center"
                                              Margin="0,0,0,5"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Border Background="#FF2A2A2A" 
                                CornerRadius="6" 
                                Padding="12">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="✨" 
                                               FontSize="14" 
                                               Foreground="White" 
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Дополнительно" 
                                               Foreground="White" 
                                               FontSize="14"
                                               FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Margin="5,0,0,0">
                                    <CheckBox x:Name="ShowTimerCheckBox"
                                              Content="Таймер"
                                              IsChecked="True"
                                              Foreground="White"
                                              FontSize="13"
                                              Margin="0,0,0,8"/>

                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="2" 
                Margin="10,0,10,10" 
                Background="#FF1E1E1E" 
                CornerRadius="8"
                BorderBrush="#FF444444"
                BorderThickness="1">

            <Grid Margin="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="📈 Последняя тренировка" 
                               Foreground="#FFAAAAAA" 
                               FontSize="11"
                               Margin="0,0,0,6"/>

                    <StackPanel Orientation="Horizontal">
                        <Border Background="#FF2A2A2A" 
                                CornerRadius="4" 
                                Padding="10,8"
                                BorderBrush="#FF444444"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Дата" 
                                           Foreground="#FFAAAAAA" 
                                           FontSize="11"/>
                                <TextBlock x:Name="LastTrainingDate" 
                                           Text="10.01.26" 
                                           Foreground="White" 
                                           FontSize="13"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FF2A2A2A" 
                                CornerRadius="4" 
                                Padding="10,8"
                                BorderBrush="#FF444444"
                                BorderThickness="1"
                                Margin="8,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Результат" 
                                           Foreground="#FFAAAAAA" 
                                           FontSize="11"/>
                                <TextBlock x:Name="LastTrainingResult" 
                                           Text="15/20 (75%)" 
                                           Foreground="#FF4CAF50" 
                                           FontSize="13"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FF2A2A2A" 
                                CornerRadius="4" 
                                Padding="10,8"
                                BorderBrush="#FF444444"
                                BorderThickness="1"
                                Margin="8,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Средний" 
                                           Foreground="#FFAAAAAA" 
                                           FontSize="11"/>
                                <TextBlock x:Name="AverageResult" 
                                           Text="72%" 
                                           Foreground="#FF2196F3" 
                                           FontSize="13"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="🚀 Начать"
                        Width="140"
                        Height="40"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        Click="StartTrainingButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
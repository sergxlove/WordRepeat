<UserControl x:Class="WordRepeat.Views.TrainActionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordRepeat.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Loaded="UserControl_Loaded">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Margin="10,10,10,0"
                Background="#FF1E1E1E" 
                CornerRadius="8"
                BorderBrush="#FF444444"
                BorderThickness="1">

            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📝" 
                               Foreground="White" 
                               FontSize="16" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Слово" 
                                   Foreground="#FFAAAAAA" 
                                   FontSize="11"/>
                        <TextBlock x:Name="CurrentWordText" 
                                   Text="1 из 20" 
                                   Foreground="White" 
                                   FontSize="16"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Margin="20,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="Прогресс" 
                               Foreground="#FFAAAAAA" 
                               FontSize="11"
                               Margin="0,0,0,5"/>

                    <Border Background="#FF2A2A2A" 
                            CornerRadius="10"
                            Height="12">
                        <Border x:Name="ProgressBarFill" 
                                Background="#FF4CAF50" 
                                CornerRadius="10"
                                Width="0"
                                HorizontalAlignment="Left"/>
                    </Border>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,5,0,0">
                        <TextBlock x:Name="ProgressText" 
                                   Text="0%" 
                                   Foreground="#FFAAAAAA" 
                                   FontSize="11"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Время" 
                                   Foreground="#FFAAAAAA" 
                                   FontSize="11"/>
                        <TextBlock x:Name="TimerText" 
                                   Text="00:00" 
                                   Foreground="#FF2196F3" 
                                   FontSize="16"
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Счет" 
                                   Foreground="#FFAAAAAA" 
                                   FontSize="11"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="CorrectCountText" 
                                       Text="0" 
                                       Foreground="#FF4CAF50" 
                                       FontSize="16"
                                       FontWeight="Bold"/>
                            <TextBlock Text="/" 
                                       Foreground="#FFAAAAAA" 
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="2,0,2,0"/>
                            <TextBlock x:Name="TotalCountText" 
                                       Text="20" 
                                       Foreground="White" 
                                       FontSize="16"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" 
                Margin="10,20,10,20"
                Background="#FF1A1A1A" 
                CornerRadius="12"
                BorderBrush="#FF333333"
                BorderThickness="1"
                VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" 
                            Margin="20,20,20,10"
                            HorizontalAlignment="Center">
                    <TextBlock x:Name="QuestionTypeText" 
                               Text="Угадайте слово:" 
                               Foreground="#FFAAAAAA"
                               FontSize="14"
                               HorizontalAlignment="Center"/>

                    <TextBlock x:Name="HintText" 
                               Text="(существительное)" 
                               Foreground="#FF8888FF"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>

                <Viewbox Grid.Row="1" 
                         Stretch="Uniform" 
                         MaxHeight="180"
                         Margin="40,0,40,40">
                    <TextBlock x:Name="QuestionText" 
                               Text="apple" 
                               Foreground="White"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               FontFamily="Arial"/>
                </Viewbox>
            </Grid>
        </Border>

        <Border Grid.Row="2" 
                x:Name="OptionPanel"
                Margin="10,0,10,10"
                Background="#FF1E1E1E" 
                CornerRadius="8"
                BorderBrush="#FF444444"
                BorderThickness="1"
                Visibility="Visible">

            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Выберите правильный вариант:" 
                           Foreground="#FFAAAAAA"
                           FontSize="14"
                           Margin="0,0,0,15"
                           HorizontalAlignment="Center"/>

                <StackPanel Grid.Row="1">
                    <Button x:Name="Option1Button"
                            Content="яблоко"
                            Height="45"
                            Background="#FF2A2A2A"
                            Foreground="White"
                            BorderBrush="#FF555555"
                            BorderThickness="1"
                            FontSize="14"
                            Margin="0,0,0,10"
                            Click="OptionButtonOne_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF3A3A3A"/>
                                        <Setter Property="BorderBrush" Value="#FF666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="Option2Button"
                            Content="книга"
                            Height="45"
                            Background="#FF2A2A2A"
                            Foreground="White"
                            BorderBrush="#FF555555"
                            BorderThickness="1"
                            FontSize="14"
                            Margin="0,0,0,10"
                            Click="OptionButtonTwo_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF3A3A3A"/>
                                        <Setter Property="BorderBrush" Value="#FF666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="Option3Button"
                            Content="компьютер"
                            Height="45"
                            Background="#FF2A2A2A"
                            Foreground="White"
                            BorderBrush="#FF555555"
                            BorderThickness="1"
                            FontSize="14"
                            Click="OptionButtonThree_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF3A3A3A"/>
                                        <Setter Property="BorderBrush" Value="#FF666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" 
                x:Name="InputPanel"
                Margin="10,0,10,10"
                Background="#FF1E1E1E" 
                CornerRadius="8"
                BorderBrush="#FF444444"
                BorderThickness="1"
                Visibility="Collapsed">

            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Введите ответ:" 
                           Foreground="#FFAAAAAA"
                           FontSize="14"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                <TextBox Grid.Row="1"
                         x:Name="AnswerTextBox" 
                         Height="60"
                         Background="#FF333333"
                         Foreground="White"
                         BorderBrush="#FF555555"
                         BorderThickness="1"
                         Padding="15"
                         FontSize="16"
                         VerticalContentAlignment="Center"
                         TextChanged="AnswerTextBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#FF4CAF50"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button Grid.Row="2"
                        x:Name="CheckInputButton"
                        Content="Проверить"
                        Width="120"
                        Height="35"
                        Background="#FF4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        HorizontalAlignment="Right"
                        Margin="0,15,0,0"
                        Visibility="Collapsed"
                        Click="CheckButtonEnter_Click"
                        IsEnabled="False">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#FF2A2A2A"/>
                                    <Setter Property="Foreground" Value="#FF666666"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF5CB860"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Row="3" 
                Margin="10,0,10,10"
                Background="#FF1E1E1E" 
                CornerRadius="8"
                BorderBrush="#FF444444"
                BorderThickness="1">

            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="PreviousResultIcon" 
                               Text="❌" 
                               FontSize="20"
                               Margin="0,0,10,0"
                               Visibility="Collapsed"/>

                    <StackPanel>
                        <TextBlock x:Name="PreviousResultText" 
                                   Text="Ответ неверный" 
                                   Foreground="#FFD32F2F"
                                   FontSize="20"
                                   Visibility="Collapsed"/>
                        <TextBlock x:Name="CorrectAnswerText" 
                                   Text="Ответ верный" 
                                   Foreground="#FFAAAAAA"
                                   FontSize="20"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button x:Name="CheckButton" 
                            Content="Проверить"
                            Width="100"
                            Height="35"
                            Background="#FF4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="13"
                            Click="CheckButtonOption_Click"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF5CB860"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="2" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <Button x:Name="EndButton" 
                            Content="Завершить"
                            Width="120"
                            Height="35"
                            Background="#FFD32F2F"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="13"
                            Click="EndButton_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFE53935"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
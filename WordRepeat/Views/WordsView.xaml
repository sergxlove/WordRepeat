<UserControl x:Class="WordRepeat.Views.WordsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WordRepeat.Views"
             mc:Ignorable="d" 
             d:DesignHeight="528" d:DesignWidth="703"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>
        <!-- Стиль для темного ComboBox -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                          Grid.Column="2" 
                                          Focusable="false"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="20"/>
                                            </Grid.ColumnDefinitions>
                                            <Border x:Name="Border" 
                                                    Grid.ColumnSpan="2" 
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}"/>
                                            <Border Grid.Column="0" 
                                                    Margin="1" 
                                                    Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="0,0,1,0"/>
                                            <Path x:Name="Arrow" 
                                                  Grid.Column="1" 
                                                  Fill="White" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  Data="M0,0 L4,4 8,0 z"/>
                                        </Grid>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" 
                                              IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="8,0,30,0"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              />
                            <TextBox x:Name="PART_EditableTextBox" 
                                     Style="{x:Null}" 
                                     HorizontalAlignment="Left" 
                                     VerticalAlignment="Center" 
                                     Margin="8,0,30,0"
                                     Focusable="True" 
                                     Background="Transparent" 
                                     Foreground="{TemplateBinding Foreground}"
                                     Visibility="Hidden"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup x:Name="Popup" 
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" 
                                   Focusable="False" 
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown" 
                                      SnapsToDevicePixels="True" 
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" 
                                            Background="#FF1A1A1A" 
                                            BorderBrush="#FF444444" 
                                            BorderThickness="1"/>
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#FF888888"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger SourceName="Popup" Property="Popup.AllowsTransparency" Value="true">
                                <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="4"/>
                                <Setter TargetName="DropDownBorder" Property="Margin" Value="0,2,0,0"/>
                            </Trigger>
                            <Trigger Property="IsEditable" Value="true">
                                <Setter Property="IsTabStop" Value="false"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для элементов ComboBox -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FF1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2A2A2A"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF2A2A2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для заголовков DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="Foreground" Value="#FFAAAAAA"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Словарь" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold"/>
            <TextBlock Text="Добавляйте новые слова и управляйте своим словарным запасом" 
                       Foreground="#FFAAAAAA" 
                       FontSize="13"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Margin="10,10,10,20" 
                Background="#FF1E1E1E" 
                CornerRadius="8"
                BorderBrush="#FF444444"
                BorderThickness="1">

            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="➕" 
                               Foreground="White" 
                               FontSize="16" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="Добавление нового слова" 
                               Foreground="White" 
                               FontSize="16"
                               FontWeight="Bold"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Английское слово" 
                                   Foreground="#FFAAAAAA" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="WordTextBox" 
                                 Height="40" 
                                 Background="#FF2A2A2A"
                                 Foreground="White"
                                 BorderBrush="#FF555555"
                                 Padding="10"
                                 FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Перевод" 
                                   Foreground="#FFAAAAAA" 
                                   FontSize="12"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="TranslationTextBox" 
                                 Height="40" 
                                 Background="#FF2A2A2A"
                                 Foreground="White"
                                 BorderBrush="#FF555555"
                                 Padding="10"
                                 FontSize="14"/>
                    </StackPanel>

                    <Button Grid.Column="3" 
                            Content="Добавить"
                            Width="100"
                            Height="35"
                            Background="#FF4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            VerticalAlignment="Bottom"
                            Margin="20,0,0,0"
                            Click="AddButton_Click"/>
                </Grid>
            </Grid>
        </Border>

        <Border Grid.Row="2" 
                Margin="10,0,10,10" 
                Background="#FF1A1A1A" 
                CornerRadius="8"
                BorderBrush="#FF333333"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Margin="15,15,15,10">
                    <TextBlock Text="📚" 
                               Foreground="White" 
                               FontSize="16" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="Мой словарь" 
                               Foreground="White" 
                               FontSize="16"
                               FontWeight="Bold"/>

                    <TextBox x:Name="SearchTextBox" 
                             Width="200"
                             Height="30"
                             Background="#FF2A2A2A"
                             Foreground="White"
                             BorderBrush="#FF555555"
                             Padding="10,0"
                             Margin="20,0,0,0"
                             FontSize="13"
                             TextChanged="SearchTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Grid>
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="4"/>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                              Margin="5,0"/>
                                                <TextBlock Text="Поиск..." 
                                                           Foreground="#FF666666"
                                                           Margin="10,0,0,0"
                                                           VerticalAlignment="Center"
                                                           IsHitTestVisible="False">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="🗘 Обновить" 
                                Width="100" Height="30"
                                Margin="20,0,0,0"
                                Background="#FF2196F3"
                                Foreground="White"
                                Click="UpdateData_Click"/>
                    </StackPanel>
                </StackPanel>

                <DataGrid x:Name="WordsDataGrid" 
                          Grid.Row="1"
                          Margin="15,0,15,15"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          Background="Transparent"
                          Foreground="White"
                          BorderThickness="0"
                          RowBackground="#FF222222"
                          AlternatingRowBackground="#FF1E1E1E"
                          HeadersVisibility="Column"
                          HorizontalGridLinesBrush="#FF333333"
                          VerticalGridLinesBrush="#FF333333">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Слово" 
                                            Width="*" 
                                            Binding="{Binding Word}"
                                            HeaderStyle="{StaticResource DataGridHeaderStyle}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Перевод" 
                                            Width="*" 
                                            Binding="{Binding Translate}"
                                            HeaderStyle="{StaticResource DataGridHeaderStyle}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FF88FF88"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="5"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Действия" Width="120"
                                                HeaderStyle="{StaticResource DataGridHeaderStyle}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="✏️" 
                                                Width="30" Height="30"
                                                Background="#FFFF9800"
                                                Foreground="White"
                                                ToolTip="Редактировать"
                                                Click="EditButton_Click"
                                                Margin="0,0,5,0"/>

                                        <Button Content="🗑️" 
                                                Width="30" Height="30"
                                                Background="#FFD32F2F"
                                                Foreground="White"
                                                ToolTip="Удалить"
                                                Click="DeleteButton_Click"
                                                Margin="0,0,5,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Border Grid.Row="3" 
                Margin="10,0,10,10" 
                Background="#FF1E1E1E" 
                CornerRadius="8"
                BorderBrush="#FF444444"
                BorderThickness="1">

            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#FF4CAF50" 
                                CornerRadius="5" 
                                Padding="10,5"
                                Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Всего слов" 
                                           Foreground="White" 
                                           FontSize="11"/>
                                <TextBlock x:Name="TotalWordsCount" 
                                           Text="0" 
                                           Foreground="White" 
                                           FontSize="18"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">

                    <TextBlock Text="Страница" 
                               Foreground="#FFAAAAAA"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

                    <TextBox x:Name="PageNumberTextBox" 
                             Width="40" 
                             Height="25"
                             Text="1"
                             Background="#FF2A2A2A"
                             Foreground="White"
                             BorderBrush="#FF555555"
                             TextAlignment="Center"
                             VerticalContentAlignment="Center"/>

                    <TextBlock Text="из" 
                               Foreground="#FFAAAAAA"
                               VerticalAlignment="Center"
                               Margin="10,0,10,0"/>

                    <TextBlock x:Name="TotalPagesText" 
                               Text="1" 
                               Foreground="White"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <Button x:Name="FirstPageButton" 
                            Content="❮❮" 
                            Width="35" Height="25"
                            Background="#FF2A2A2A"
                            Foreground="White"
                            Margin="20,0,5,0"
                            ToolTip="Первая страница"
                            Click="FirstPageButton_Click"/>

                    <Button x:Name="PrevPageButton" 
                            Content="❮" 
                            Width="35" Height="25"
                            Background="#FF2A2A2A"
                            Foreground="White"
                            Margin="0,0,5,0"
                            ToolTip="Предыдущая страница"
                            Click="PrevPageButton_Click"/>

                    <Button x:Name="NextPageButton" 
                            Content="❯" 
                            Width="35" Height="25"
                            Background="#FF2A2A2A"
                            Foreground="White"
                            Margin="0,0,5,0"
                            ToolTip="Следующая страница"
                            Click="NextPageButton_Click"/>

                    <Button x:Name="LastPageButton" 
                            Content="❯❯" 
                            Width="35" Height="25"
                            Background="#FF2A2A2A"
                            Foreground="White"
                            ToolTip="Последняя страница"
                            Click="LastPageButton_Click"/>

                    <TextBlock Text="Показывать:" 
                               Foreground="#FFAAAAAA"
                               VerticalAlignment="Center"
                               Margin="20,0,10,0"/>

                    <ComboBox x:Name="PageSizeComboBox" 
                              Width="70" 
                              Height="25"
                              SelectedIndex="0"
                              Style="{StaticResource DarkComboBoxStyle}">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="25" IsSelected="True"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>